<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.amahi.anywhere"
	android:installLocation="auto">

	<uses-sdk
		android:minSdkVersion="14"
		android:targetSdkVersion="19"/>

	<uses-permission
		android:name="android.permission.INTERNET"/>

	<application
		android:label="Amahi Anywhere"
		android:name=".AmahiApplication"
		android:theme="@style/Theme.Amahi">

		<activity
			android:name=".activity.ServersActivity">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>

		<activity
			android:label="Shares"
			android:name=".activity.ServerSharesActivity">
		</activity>

	</application>

</manifest>
