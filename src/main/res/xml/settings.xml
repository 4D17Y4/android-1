<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="Server">

		<ListPreference
			android:key="server_connection"
			android:title="Connection"
			android:entries="@array/preference_entries_server_connection"
			android:entryValues="@array/preference_entries_keys_server_connection"
			android:defaultValue="@string/preference_key_server_connection_local"/>

	</PreferenceCategory>

	<PreferenceCategory android:title="Account">

		<Preference
			android:key="account_sign_out"
			android:title="Sign out"/>

	</PreferenceCategory>

	<PreferenceCategory android:title="About">

		<Preference
			android:key="@string/preference_key_application_feedback"
			android:title="Send feedback"/>

		<Preference
			android:key="application_rating"
			android:title="Rate the application"/>

		<Preference
			android:key="@string/preference_key_application_version"
			android:title="Application version"/>

	</PreferenceCategory>

</PreferenceScreen>